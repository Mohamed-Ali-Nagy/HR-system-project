@model EmployeeDepartmentVM

@{
    ViewData["Title"] = "Details";
}

<div class="container emp-profile">

    <div class="row">

        <div class="col-md-8">
            <div class="profile-head">
                <h5>@Model.Name</h5>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Personal data</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Work Data</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Address</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Gender</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Gender</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Phone Number</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Phone</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nationality</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Nationality</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>National Id</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.NationalityId</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>BirthDay</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Birthdate.ToString("dd-MM-yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Department Name</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.DeptName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Contract Date</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Hiredate.ToString("dd-MM-yyyy")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Salary</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Salary $</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Start Time</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.AttendanceTime.ToString(@"hh\:mm\ tt")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>End Time</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.LeavingTime.ToString(@"hh\:mm\ tt")</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
