@model EmployeeDepartmentVM

@{
    ViewData["Title"] = "getDetails";
}

@*<h1>Employee Information</h1>*@

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender </dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Model.Birthdate.ToString("hh:mm") </dd>

        <dt class="col-sm-2">Nationality</dt>
        <dd class="col-sm-10">@Model.Nationality </dd>

        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.NationalityId </dd>

        <dt class = "col-sm-2">Address</dt>
        <dd class = "col-sm-10">@Model.Address</dd>

        <dt class = "col-sm-2">Phone Number</dt>
        <dd class = "col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.Hiredate</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.DeptName</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Attendance Time</dt>
        <dd class="col-sm-10">@Model.AttendanceTime</dd>

        <dt class="col-sm-2">Leaving Time</dt>
        <dd class="col-sm-10">@Model.LeavingTime</dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="delete" asp-route-id="@Model?.Id" onclick="return confirm('Do you want to delete this employee??')">Delete</a> |

    <a asp-action="Index">Back to List</a>
</div>
