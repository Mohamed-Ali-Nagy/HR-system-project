@model EmployeeDepartmentVM

@{
    ViewData["Title"] = "getDetails";
}

@*<h1>Employee Information</h1>*@
<div class="container my-5" style="width:70%">
    <div>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender </dd>

            <dt class="col-sm-4">Birth Date</dt>
            <dd class="col-sm-8">@Model.Birthdate.ToString("hh:mm") </dd>

            <dt class="col-sm-4">Nationality</dt>
            <dd class="col-sm-8">@Model.Nationality </dd>

            <dt class="col-sm-4">National ID</dt>
            <dd class="col-sm-8">@Model.NationalityId </dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4">Phone Number</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Hire Date</dt>
            <dd class="col-sm-8">@Model.Hiredate</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.DeptName</dd>

            <dt class="col-sm-4">Salary</dt>
            <dd class="col-sm-8">@Model.Salary</dd>

            <dt class="col-sm-4">Attendance Time</dt>
            <dd class="col-sm-8">@Model.AttendanceTime</dd>

            <dt class="col-sm-4">Leaving Time</dt>
            <dd class="col-sm-8">@Model.LeavingTime</dd>

        </dl>
    </div>
    <div class="my-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a> 
        <a asp-action="delete" asp-route-id="@Model?.Id" class="btn btn-danger mx-3" onclick="return confirm('Do you want to delete this employee??')">Delete</a> 

        <a asp-action="Index" class="my-4" style="display:block;">Back to List</a>
    </div>
</div>

