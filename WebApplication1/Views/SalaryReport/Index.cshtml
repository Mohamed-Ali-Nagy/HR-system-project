                </select>
                <span class="danger"></span>
            </div>
            <div class="col-3">
                <label>Year</label>
                <input class="form form-control" type="number" name="yaer" min="2005" max="@DateTime.Now.Year" />
                <span class="danger"></span>
            </div>
            <div class="col-1 m-1">
                <input type="submit" value="Search" class="  btn btn-primary m-2" />
            </div>
        </div>
    </form>
