<table class="table" style="text-align:center" id="salarytable">
    <thead style="font-size:13px">
        <tr>
            <td>Employee Name</td>
            <td>Department Name</td>
            <td>Salary</td>
            <td>Attendance Days</td>
            <td>Absence Days</td>
            <td>Add Hours</td>
            <td>Dedacated Hours</td>
            <td>Total Add</td>
            <td>Total Dedacated</td>
            <td>Total Due</td>
            <td>Operation</td>
        </tr>
    </thead>
