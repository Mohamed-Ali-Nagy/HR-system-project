@model List<ApplicationUserGroupVM>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            @*<th scope="col">Password</th>*@
            @*<th scope="col">Role</th>*@
            
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model) {
        <tr>
                <th scope="row">@(i++)</th>

                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>@user.RoleName</td>
            <td>
                    <a asp-controller="User" asp-action="Delete" asp-route-Email="@user.Email" onclick="return confirm('Are you sure you want to delete this user ?')">Delete</a> |
                @*<a asp-action="Delete" asp-route-id="@user.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
