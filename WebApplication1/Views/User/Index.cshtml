@model List<ApplicationUserGroupVM>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<div class="container">
    <h1 class="my-3">Users</h1>

    <p>
        <a asp-action="add">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Options</th>
                @*<th scope="col">Role</th>*@

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                @if (User.Identity.Name!=user.UserName)
                {
                    <tr>
                        <th scope="row">@(i++)</th>

                        <td>@user.Name</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        @*<td>@user.Password</td>*@
                        @*<td>@user.RoleName</td>*@
                        <td>
                            <a asp-controller="User" asp-action="Delete" asp-route-Id="@user.Id" onclick="return confirm('Are you sure you want to delete this user ?')">Delete</a> |
                            <a asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id">edit</a>

                        </td>
                    </tr>
                }
               
            }
        </tbody>
    </table>

</div>
