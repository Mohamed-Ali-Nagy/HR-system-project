@model List<Holidays>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Holidays</h1>
<div class="text-center">
    <a class="btn btn-success" asp-action="New">Add</a>
</div>
<br />
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (Holidays item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Date.ToString("MM/dd/yyyy"), @item.Date.ToString("dddd")</td>
            <td>
                @Html.ActionLink("Remove", "Remove", new { id = item.id } ,
            new { @class = "btn btn-danger",
            onclick = $"return confirm('Are you sure you want to delete {item.Name} form Holidays?')"
            })
                
                <a asp-action="Edit" asp-route-Id="@item.id" class="btn btn-warning">Edit</a>
               

            </td>
        </tr>
    }
</table>



