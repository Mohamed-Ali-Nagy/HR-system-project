@model RolePermisionsVM
@{
    ViewData["Title"] = "edit";
    int j = 0;
}

<h1>edit</h1>
<form asp-action="add">
    <div class="row mb-3">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control">
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Edit</button>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Page</th>
                <th scope="col">View</th>
                <th scope="col">Add</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Pages.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Pages[i]">

                <tr>
                    <th scope="row">@Model.Pages[i]</th>
                    @for (int x = 0; x < 4; x++)
                    {
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="@Model.AllPermissions[j].isSelected">
                                <input type="hidden" asp-for="@Model.AllPermissions[j].ClaimValue">


                            </div>
                            @*<label asp-for="@Model.AllPermissions">@Model.AllPermissions[j].ClaimValue</label>*@


                        </td>
                        j++;

                    }


                </tr>
            }


        </tbody>
    </table>

</form>
