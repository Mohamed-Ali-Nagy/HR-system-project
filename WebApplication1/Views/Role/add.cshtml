@model RolePermisionsVM
@{
    ViewData["Title"] = "add";
    int j = 1;
}

<h1>add</h1>
<form asp-action="add">
    <div class="row mb-3">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name"  class="form-control" >
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Add</button>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Page</th>
                <th scope="col">View</th>
                <th scope="col">Add</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @for(int i=0;i<Model.Pages.Count;i++)
            {
                
                <tr>
                    <th scope="row">@Model.Pages[i]</th>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="@Model.AllPermissions[i+j-1].isSelected">
                        </div>
                        <label asp-for="@Model.AllPermissions[i].ClaimValue">@Model.AllPermissions[i+j-1].ClaimValue</label>


                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="@Model.AllPermissions[i].isSelected">

                        </div>
                       

                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="@Model.AllPermissions[i].isSelected">
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="@Model.AllPermissions[i].isSelected">
                        </div>
                    </td>

                </tr>
                j=i + j + 1;
            }
           
           
        </tbody>
    </table>
   
</form>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


